<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="hoePu" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>hu.oe.hoe.adatok.Building</class>
    <class>hu.oe.hoe.adatok.Empire</class>
    <class>hu.oe.hoe.adatok.Hero</class>
    <class>hu.oe.hoe.adatok.Hybrid</class>
    <class>hu.oe.hoe.adatok.NaturalAsset</class>
    <class>hu.oe.hoe.adatok.Species</class>
    <class>hu.oe.hoe.adatok.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hoe?useSSL=false"/>
      <property name="javax.persistence.jdbc.user" value="javaee"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="javaee"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
