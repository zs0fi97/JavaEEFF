<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="hoePu" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Models.Ability</class>
    <class>Models.Building</class>
    <class>Models.Empire</class>
    <class>Models.Hero</class>
    <class>Models.Hybrid</class>
    <class>Models.NaturalAsset</class>
    <class>Models.People</class>
    <class>Models.Population</class>
    <class>Models.Quality</class>
    <class>Models.Species</class>
    <class>Models.Stock</class>
    <class>Models.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hoe?useSSL=false"/>
      <property name="javax.persistence.jdbc.user" value="javaee"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="javaee"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
